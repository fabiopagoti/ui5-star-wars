<mvc:View  xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core"    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ovly.star_wars.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<!--<Input id="identificador" placeholder="ID do personagem" value="1"/>-->
						<!--<Button text="Buscar" icon="sap-icon://search"  press="onPressBuscar"  />-->
						
						<!--<SearchField id="identificador" placeholder="ID do personagem" value="1" search="onPressBuscar" />-->
						<!--<Slider id="identificador" min="1" max="50" liveChange="onPressBuscar" />-->
						<StepInput class="sapUiResponsiveMargin" visible="{= ${device>/system/phone} ? false : true}" value="{options>/id}" change="onPressBuscar" />
						<Slider class="sapUiMediumMarginBeginEnd" visible="{device>/system/phone}" value="{options>/id}" min="1" max="50" liveChange="onPressBuscar" />
												
						<sap.ui.layout.form:SimpleForm id="form" busyIndicatorDelay="0" busy="{options>/ocupado}"  editable="true"
							layout="ResponsiveGridLayout" >
							<sap.ui.layout.form:content>
								<sap.ui.core:Title text="Dados Básicos" />
								<Label text="{i18n>label_name}"/>
								<Input value="{/name}" />
								<Label text="Altura"/>
								<Input value="{/height}" />
								<Label text="Olhos"/>
								<Input value="{/eye_color}" />
								<sap.ui.core:Title text="Filmes" />
								<Label text="Lista de Filmes"/>
								<!--<Select items="{/films}">-->
								<!--	<items>-->
								<!--		<core:Item xmlns:core="sap.ui.core" text="{}" />-->
								<!--	</items>-->
								<!--</Select>-->
								<List items="{/films}">
									<items>
										<CustomListItem>
											<content>
												<Link href="{}" text="Ver filme" target="_blank" />
											</content>
										</CustomListItem>
									</items>
								</List>
							</sap.ui.layout.form:content>
						</sap.ui.layout.form:SimpleForm>
					</content>
					<footer>
						<Bar id="bar0">
							<contentMiddle>
								<Button xmlns="sap.m" text="Documentação" icon="sap-icon://message-information" press="onPressDocs"/>
							</contentMiddle>
						</Bar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>